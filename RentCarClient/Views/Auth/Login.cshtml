@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <title>RentCar - Login</title>
</head>
<body>
    <div class="container">
        <h2>Login ke <span><a asp-area="" asp-controller="Home" asp-action="Index">RentCar</a></span></h2>
        <form>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" id="email" placeholder="Masukkan email Anda" required>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" placeholder="Masukkan password Anda" required>
            </div>

            <button type="submit" class="btn w-full">Login</button>

            <p class="link">Belum punya akun? <a asp-area="" asp-controller="Auth" asp-action="Register">Registrasi disini</a></p>
        </form>
    </div>
</body>
</html>